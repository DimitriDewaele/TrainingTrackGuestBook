<%@page contentType="text/html" pageEncoding="UTF-8"%>

<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@taglib prefix="sql" uri="http://java.sun.com/jsp/jstl/sql"%>

<sql:query var="messages" dataSource="jdbc/MessageDS">
SELECT USERS.NAME, MESSAGES.MESSAGE 
FROM MESSAGES
LEFT OUTER JOIN USERS
ON MESSAGES.USER_ID = USERS.id
</sql:query>

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>JSP Page</title>
    </head>
    <body>
        <h1>Hello World! - JSP page</h1>

        <div>
            <p>All Users</p>
            <table border="1">
                <!-- column headers -->
                <tr>
                    <c:forEach var="columnName" items="${messages.columnNames}">
                        <th><c:out value="${columnName}"/></th>
                        </c:forEach>
                </tr>
                <!-- column data -->
                <c:forEach var="row" items="${messages.rowsByIndex}">
                    <tr>
                        <c:forEach var="column" items="${row}">
                            <td><c:out value="${column}"/></td>
                        </c:forEach>
                    </tr>
                </c:forEach>
            </table>
    </body>

</div>
</html>
